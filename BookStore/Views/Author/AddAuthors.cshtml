@using BookStore.data
@using BookStore.Models
@model VMAuthor
@{
    ViewData["Title"] = "AddAuthors";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@section Head{ 

    <script type="text/javascript">
       
        $(document).ready(function () {

            $("#Edit1").click(function () {
                
                var authid = $(this).parent().parent().find("#TD").text()
                debugger;
                $.ajax({
                    type: 'get',
                    url: '/BookStore/Author/Edit?Id=' + authid,
                    success: function (data) {
                        debugger
                        $("#Auth_FirstName").val(data.firstName)
                        $("#Auth_LastName").val(data.lastName)
                        $("#Auth_ID").val(data.id)
                        $("#Auth_Path").val(data.path)
                        //$("#Auth.Nationality_ID").val();
                        if (data.id > 0) {

                            $("#up").show()
                            $("#save").hide()
                        }
                    },
                    error: function () {
                        alert("error")
                    }
                    
                })
                $("#exampleModal").modal('show');
            });

        });

    </script>

}

@section Body{
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Auth.ID" />
        <input type="hidden" asp-for="Auth.Path" />
        <div class="row">
            <div class="col-lg-12" style="background-color:gainsboro">
                <h1>Authors Section</h1>
            </div>
        </div>
        <div class="row" style="margin-top:15px">
            <div class="col-lg-5">
                <div>
                    <input type="button" value="New Author" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" />
                </div>
                <div class="modal" id="exampleModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Category</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" asp-for="Auth.FirstName" />
                                </div>
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" asp-for="Auth.LastName" />
                                </div>
                                <div class="form-group">
                                    <label>Nationality</label>

                                    <select asp-for="Auth.Nationality_ID" asp-items='new SelectList(Model.nationalities,"ID","Name")' class="form-control"></select>

                                </div>
                                <div class="form-group">
                                    <label>Upload Image</label>
                                    <input type="file" asp-for="Auth.Image"/>
                                </div>
                            </div>
                            <div class="modal-footer">


                                <div style="float: right">
                                    <div style="float: left; margin-right: 13px">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                    <div style="float:left">
                                        <input type="submit" class="btn btn-primary" asp-action="Save" value="Save" style="display:block" id="save" />
                                    </div>
                                    <div style="float:left">
                                        <input type="submit" class="btn btn-primary" asp-action="Update" value="Update" style="display:none" id="up" />
                                    </div>
                                </div>

                                



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top:20px">

            <div class="col-lg-offset-0">

                <table class="table table-bordered">

                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Author auth in Model.authors)
                        {
                            <tr>
                                <td id="TD">@auth.ID</td>
                                <td>@auth.FirstName</td>
                                <td><img src="@auth.Path" style="width:50px" /></td>
                                <td>
                                    <a asp-action="Delete" asp-route-Id="@auth.ID" class="glyphicon glyphicon-remove">Delete</a>
                                    <a id="Edit1" class="glyphicon glyphicon-edit">Edit</a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>

            </div>

        </div>
    </form>
}