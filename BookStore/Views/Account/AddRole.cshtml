@using BookStore.Models
@model RoleModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@section Head{ 

    <link href="~/css/StyleSheet2.css" rel="stylesheet" />

}

@section Body{ 

    <form method="post">

        <div class="row main-content bg-success text-center">
            <div class="col-md-4 text-center company__info">
                <span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
                <h4 class="company_title">Roles</h4>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form ">

                <div class="row">
                    <h2>Add Roles</h2>
                </div>
                <div class="row">
                    <div class="form-group" style="padding: 0 2em">
                        <div class="row">
                            <input type="text" asp-for="Name" class="form__input" placeholder="Role Name">
                        </div>
                        <div class="row">
                            <input type="submit" value="Save" class="btn" asp-action="AddRole">
                        </div>
                    </div>
                </div>
               

            </div>
        </div>

    </form>
    
}

