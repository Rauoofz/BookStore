@using BookStore.Models
@model SignInModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@section Head{ 

    <link href="~/css/StyleSheet2.css" rel="stylesheet" />
}

@section Body{ 

    <form method="post">

            

            <div class="row main-content bg-success text-center">
                <div class="col-md-4 text-center company__info">
                    <span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
                    <h4 class="company_title"><span class="glyphicon glyphicon-book"></span></h4>
                </div>
                <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                    
                        <div class="row">
                            <h2>Log In</h2>
                        </div>
                        <div class="row">
                            <span style="color:red">@ViewData["error"]</span>
                            <div class="form-group" style="padding: 0 2em">
                                <div class="row">
                                    <input type="text" asp-for="Username" class="form__input" placeholder="Username">
                                </div>
                                <div class="row">
                                    <!-- <span class="fa fa-lock"></span> -->
                                    <input type="password" asp-for="Password" class="form__input" placeholder="Password">
                                </div>
                                <div class="row">
                                    <input type="checkbox" asp-for="RemeberMe" class="">
                                    <label for="remember_me">Remember Me!</label>
                                </div>
                                <div class="row">
                                    <input type="submit" value="Sign In" class="btn" asp-action="SignIn">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <p>Don't have an account? <a asp-action="Index">Register Here</a></p>
                        </div>
                    
                </div>
            </div>
        
        <!-- Footer -->
       

    </form>

}

